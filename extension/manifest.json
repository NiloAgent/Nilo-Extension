{
  "manifest_version": 3,
  "name": "Nilo - Solana Token Security Analyzer",
  "version": "2.0.1",
  "description": "Analyze Solana tokens and GitHub repositories for trustworthiness and key risk indicators",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://nilo-backend-production.up.railway.app/*",
    "https://nilo-bvqwdhxs4-birticeks-projects.vercel.app/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://rpc.ankr.com/*",
    "https://solana.public-rpc.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Solana Token Security"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "privacy_policy": "https://github.com/your-username/nilo-extension/blob/main/PRIVACY.md"
}
