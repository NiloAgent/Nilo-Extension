{
  "manifest_version": 3,
  "name": "Solana Token Analyzer - Bitquery Edition",
  "version": "2.0.0",
  "description": "Analyze Solana memecoin tokens for safety using comprehensive Bitquery data including holders, DEX trades, transfers, and creator analysis.",
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://streaming.bitquery.io/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://solana-api.projectserum.com/*",
    "https://rpc.ankr.com/*",
    "https://solana.public-rpc.com/*",
    "https://token.jup.ag/*",
    "https://raw.githubusercontent.com/*",
    "https://solscan.io/*",
    "https://solana.fm/*",
    "https://dexscreener.com/*",
    "https://raydium.io/*",
    "https://pump.fun/*",
    "https://birdeye.so/*",
    "https://jupiter.ag/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Solana Token"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://solscan.io/*",
        "https://solana.fm/*",
        "https://dexscreener.com/*",
        "https://raydium.io/*",
        "https://pump.fun/*",
        "https://birdeye.so/*",
        "https://jupiter.ag/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 